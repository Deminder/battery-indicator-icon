<schemalist gettext-domain="battery-indicator-icon">
  <schema path="/org/gnome/shell/extensions/battery-indicator-icon/" id="org.gnome.shell.extensions.battery-indicator-icon">

    <key type="s" name="status-style">
      <default>"portrait"</default>
      <summary>Battery status icon style (portrait, circle, hidden)</summary>
    </key>

    <key type="b" name="show-icon-text">
      <default>false</default>
      <summary>Show battery percentage text in icon</summary>
    </key>
  </schema>
</schemalist>
